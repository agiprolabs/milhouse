{
  "name": "milhouse-mcp",
  "version": "0.1.0",
  "description": "MCP server for Milhouse context management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:binary": "bun build src/index.ts --compile --outfile dist/mcp-server",
    "build:binary:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/mcp-server-darwin-arm64",
    "build:binary:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/mcp-server-darwin-x64",
    "build:binary:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/mcp-server-windows-x64.exe",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@lancedb/lancedb": "^0.23.0",
    "chokidar": "^3.5.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
